{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "isolatedModules": false,
      "esModuleInterop": true,
      "rootDir": "server",
      "moduleResolution": "node",
      "target": "es6",
      "module": "esnext",
      "lib": ["es6", "dom"],
      "baseUrl": ".",
      "paths": {
        "@/*": ["./*"]
      },
      "typeRoots": [ "<types-directory-created-in-#1>", "./node_modules/@types"],
  
    },
    "include": ["server/**/*.ts"],
    "exclude": ["node_modules"]
  }
  
  